{
  "name": "libsocial",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "cd packages/api-vercel && bun run build",
    "db:push": "cd packages/api && bun run db:push",
    "dev": "concurrently --raw -n 'api,mobile', -c '#007755,#2f6da3', 'cd packages/api && bun dev' 'cd packages/mobile && bun start'",
    "dev --no-cache": "concurrently --raw -n 'api,mobile', -c '#007755,#2f6da3', 'cd packages/api && bun dev' 'cd packages/mobile && bun start -- -c'",
    "production": "concurrently -n 'api,mobile', -c '#007755,#2f6da3', 'cd packages/api && bun dev' 'cd packages/mobile && bun start'",
    "api": "cd packages/api && bun run dev",
    "mobile": "cd packages/mobile && bun start",
    "update": "cd packages/mobile && bun run update",
    "update-minor": "cd packages/mobile && bun run update-minor",
    "postinstall": "prisma generate --schema=packages/api/prisma/schema.prisma"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "@feature-sliced/eslint-config": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^5.0.1",
    "eslint": "^8",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "typescript": "^4.4.4"
  }
}
